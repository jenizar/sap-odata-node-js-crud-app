<html lang="en">
<head>
    <meta charset="utf-8">
    <title>SAP OData using Node JS</title>
    <link href="/assets/css/bootstrap.css" rel="stylesheet" type="text/css"/>
</head>
<body>    
<div class="container">  
    <div class="jumbotron">
    <img style="float: left; width:150px; height:110px" src="https://github.com/jenizar/sap-odata-python-crud-app/blob/main/images/pic6.png?raw=true"><h1>&nbsp;&nbsp;Alvator Rotary Co, Ltd</h1>      
    <h3>&nbsp;&nbsp;Equipment Heavy Industries</h3>
    <p>&nbsp;&nbsp;&nbsp;&nbsp;Sun Palace Building 21 Fl., Bangkok, Thailand</p>
  </div>    
    <p><b>Employee List</b></p>
    <p class='text-right'><button class="btn btn-success" data-toggle="modal" data-target="#myModalAdd">Add New Data</button></p>
    <table class="table table-striped" id="mytable">
        <thead>
        <tr>
            <th>Photo</th>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Position</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each emplist}}
            <tr>
                <td><img src="{{Empphoto}}" width=80 height=65></td>
                <td>{{Empid}}</td>
                <td>{{Empname}}</td>
                <td>{{Emppost}}</td>
                <td>
                    <a href="javascript:void(0);" class="btn btn-sm btn-primary view" data-empid="{{Empid}}"
                       data-empname="{{Empname}}" data-emppost="{{Emppost}}" data-empphoto="{{Empphoto}}">View</a>                            
                    <a href="javascript:void(0);" class="btn btn-sm btn-info edit" data-empid="{{Empid}}"
                       data-empname="{{Empname}}" data-emppost="{{Emppost}}" data-empphoto="{{Empphoto}}">Edit</a>
                    <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-empid="{{Empid}}"
                       data-Empname="{{Empname}}" data-emppost="{{Emppost}}" data-empphoto="{{Empphoto}}">Delete</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<!-- Add New Data Modal-->
<form action="/save" method="post">
    <div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Data</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <input type="text" name="empid" class="form-control zip"
                                placeholder="Employee ID" required>
                    </div>            

                    <div class="form-group">
                        <input type="text" name="empname" class="form-control" placeholder="Name" required>
                    </div>

                    <div class="form-group">
                        <input type="text" name="emppost" class="form-control" placeholder="Position" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="empphoto" class="form-control" placeholder="Photo" required>
                    </div>                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- View data Modal-->
<form action="/view" method="post">
    <div class="modal fade" id="ViewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Display Data</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">  
                    <div class="form-group">
                        <td><img src="" id="image" width=90 height=75></td> 
                    </div>                     
                    <div class="form-group">
                    <label>Employee ID</label>
                        <input type="text" name="empid" class="form-control empid"
                                placeholder="" readonly>
                    </div>

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="empname" class="form-control empname"
                               placeholder="Name" readonly>
                    </div>

                    <div class="form-group">
                        <label>Position</label>
                        <input type="text" name="emppost" class="form-control emppost" placeholder="Position" readonly>
                    </div>                   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Edit data Modal-->
<form action="/update" method="post">
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit Data</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">  
                    <div class="form-group">
                        <td><img src="" id="image2" width=90 height=75></td> 
                    </div>                     
                    <div class="form-group">
                    <label>Employee ID</label>                      
                        <input type="text" name="empid" class="form-control empid"
                                placeholder="" readonly>
                    </div>

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="empname" class="form-control empname"
                               placeholder="Name" required>
                    </div>

                    <div class="form-group">
                        <label>Position</label>
                        <input type="text" name="emppost" class="form-control emppost" placeholder="Position" required>
                    </div>
                    <div class="form-group">
                        <label>Photo</label>
                        <input type="text" name="empphoto" class="form-control empphoto" placeholder="Photo" required>
                    </div>                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Delete Product Modal-->
<form action="/delete" method="post">
    <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">Are You Sure To Delete This Data?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">  
                    <div class="form-group">
                        <td><img src="" id="image3" width=90 height=75></td> 
                    </div>                     
                    <div class="form-group">
                    <label>Employee ID</label>
                        <input type="text" name="empid" class="form-control empid"
                                placeholder="" readonly>
                    </div>

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="empname" class="form-control empname"
                               placeholder="Name" readonly>
                    </div>

                    <div class="form-group">
                        <label>Position</label>
                        <input type="text" name="emppost" class="form-control emppost" placeholder="Position" readonly>
                    </div>     
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="/assets/js/jquery-3.3.1.min.js"></script>
<script src="/assets/js/bootstrap.js"></script>
<script>
    $(document).ready(function () {
        //showing data to modal for view record
        $('#mytable').on('click', '.view', function () {
            var empid = $(this).data('empid');
            var empname = $(this).data('empname');
            var emppost = $(this).data('emppost');
            var empphoto = $(this).data('empphoto');
            $('#ViewModal').modal('show');
            $('.empid').val(empid);            
            $('.empname').val(empname);
            $('.emppost').val(emppost);
            $('.empphoto').val(empphoto);               
           const image = document.getElementById("image");
           image.src = empphoto;                    
        });        
        //showing data to modal for edit record
        $('#mytable').on('click', '.edit', function () {
            var empid = $(this).data('empid');
            var empname = $(this).data('empname');
            var emppost = $(this).data('emppost');
            var empphoto = $(this).data('empphoto');
            $('#EditModal').modal('show');
            $('.empid').val(empid);            
            $('.empname').val(empname);
            $('.emppost').val(emppost);
            $('.empphoto').val(empphoto);   
           const image = document.getElementById("image2");
           image2.src = empphoto;                        
        });
        //showing modal for delete record
        $('#mytable').on('click', '.delete', function () {
            var empid = $(this).data('empid');
            var empname = $(this).data('empname');
            var emppost = $(this).data('emppost');
            var empphoto = $(this).data('empphoto');
            $('#DeleteModal').modal('show');
            $('.empid').val(empid);            
            $('.empname').val(empname);
            $('.emppost').val(emppost);
            $('.empphoto').val(empphoto);   
           const image = document.getElementById("image3");
           image3.src = empphoto;             
        });
    });
</script>
</body>
</html>